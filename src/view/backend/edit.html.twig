{% extends "basebackend.html.twig" %}

{% block title %}Modifications
{% endblock %}

{% block content %}

	<div class="content_size">
		<div id="top"></div>
		{% for onePost in results %}

			<form action="index.php?action=update" method="post" enctype="multipart/form-data" id="edit_form">
				<p>
					<input type="hidden" name="id" id="id" value="{{ onePost.id }}">
				</p>
				<p>
					<input type="text" name="title" id="title" rows="1" cols="50" maxlength="250" value="{{ onePost.title }}"/>
					<input type="text" name="category" id="category" rows="1" cols="50" maxlength="250" value="{{ onePost.category }}"/>
				</p>
				<p>
					<input name="imgdescription" id="imgdescription" rows="1" cols="50" maxlength="250" value="{{ onePost.imgdescription }}"/>
				</p>
				<input type="file" name="myfile">
				<img src="./uploads/{{ onePost.image }}" class="mini_picture_of_cat"/>
				<input type="hidden" name="previous_image" value="{{ onePost.image }}">


				<textarea name="article" id="article" rows="10" cols="50" maxlength="250">
					{{ onePost.article }}
				</textarea>
				<input type="text" name="author" id="author" rows="1" cols="50" maxlength="250" value="{{ onePost.author }}"/>

				<input class="btn btn-primary" type="submit" name="update" value="Update"/>
			</p>
		</form>
	{% endfor %}
</div>{% endblock %}
