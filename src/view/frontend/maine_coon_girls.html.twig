{% extends "base.html.twig" %}
{% block title %}Femelles Maine Coons
{% endblock %}
{% block content %}
	<div class="content_size">
		<div id="top"></div>
		<div id="coat_search">
			<a href="index.php?action=search_by_coat">Trouver un Maine Coon par sa couleur</a>
		</div>
		{% for girl in girls %}
			<div class="contain_cat">
				<div class="cat_presentation">
					<div class="cat_display">
						<div class="cat_picture"><img src="./uploads/{{ girl.image | raw }}" alt="{{ girl.name | raw }}-maine-coon-{{ girl.gender | raw }}--{{ girl.coat_color | raw }}">
						</div>
						<div class="cat_info">
							<p>
								<span class="info_title">Pr√©nom:</span>
								{{ girl.name | raw }}</p>
							<p>
								<span class="info_title">Sexe:</span>
								{{ girl.gender | raw }}</p>
							<p>
								<span class="info_title">Robe:</span>
								{{ girl.coat_color | raw }}</p>
							<p>
								<span class="info_title">Date de naissance:</span>
								{{ girl.dob | raw }}</p>
							<p>
								<span class="info_title">Description:</span>
								{{ girl.description | raw }}</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
