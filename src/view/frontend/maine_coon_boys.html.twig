{% extends "base.html.twig" %}
{% block title %}Mâles Maine Coons
{% endblock %}
{% block content %}
	<div class="content_size">
		<div id="top"></div>
		<div id="coat_search">
			<a href="index.php?action=search_by_coat">Trouver un Maine Coon par sa couleur</a>
		</div>
		{% for boy in boys %}
			<div class="contain_cat">
				<div class="cat_presentation">
					<div class="cat_display">
						<div class="cat_picture"><img src="./uploads/{{ boy.image | raw }}" alt="{{ boy.name | raw }}-maine-coon-{{ boy.gender | raw }}--{{ boy.coat_color | raw }}">
						</div>
						<div class="cat_info">
							<p>
								<span class="info_title">Prénom:</span>
								{{ boy.name | raw }}</p>
							<p>
								<span class="info_title">Sexe:</span>
								{{ boy.gender | raw }}</p>
							<p>
								<span class="info_title">Robe:</span>
								{{ boy.coat_color | raw }}</p>
							<p>
								<span class="info_title">Date de naissance:</span>
								{{ boy.dob | raw }}</p>
							<p>
								<span class="info_title">Description:</span>
								{{ boy.description | raw }}</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
